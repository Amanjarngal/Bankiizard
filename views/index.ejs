    <main>
      <!-- intro section -->
      <section id="Home" style="display: flex">
        <div class="box">
          <div class="left-box">
            <h1 style="font: size 5rem">Bankiizard</h1>
            <p>Your Financial Companion</p>
          </div>
          <div class="right-box">
